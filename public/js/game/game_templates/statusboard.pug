div(id="push-container" class="div-conrainer")
    div(class="div-center" style="height:200px;")
        case status
            when "win"
                img(src=srcImage class="btn-push-image")
                h1 You win!
                p Now you can use!
            when "lose"
                img(src=srcImage class="btn-push-image")
                h1 You lost!

        div
            button(type="button" href="/game" class="btn btn-push btn-push-retry") Retry
            button(type="button" href="/" class="btn btn-push btn-exit") Back to Menu
